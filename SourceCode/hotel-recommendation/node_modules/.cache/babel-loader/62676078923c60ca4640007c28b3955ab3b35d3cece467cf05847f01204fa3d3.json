{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  data() {\n    return {\n      isLoading: true,\n      // Control loading \n      recommendations: [],\n      // Save the recommend results\n      currentPage: 0,\n      // The page number\n\n      // Data about computing discount\n      checkInDate: '',\n      checkOutDate: '',\n      numberOfRooms: 1,\n      discount: null\n    };\n  },\n  computed: {\n    currentHotel() {\n      return this.recommendations[this.currentPage];\n    }\n  },\n  methods: {\n    async fetchRecommendations() {\n      try {\n        const response = await axios.get('http://localhost:5000/getrecommendations', {\n          withCredentials: true\n        }); // Flask API 的 URL\n        this.recommendations = response.data;\n        this.isLoading = false; // Hide loading\n      } catch (error) {\n        console.error('Error fetching recommendations:', error);\n      }\n    },\n    // Go for system rate\n    goforRate() {\n      this.$router.push({\n        path: '/system-rate'\n      });\n    },\n    prevPage() {\n      if (this.currentPage > 0) {\n        this.currentPage--;\n      }\n    },\n    nextPage() {\n      if (this.currentPage < this.recommendations.length - 1) {\n        this.currentPage++;\n      }\n    },\n    async fetchDiscount() {\n      try {\n        const response = await axios.post('http://localhost:5000/getdiscount', {\n          checkInDate: this.checkInDate,\n          checkOutDate: this.checkOutDate,\n          numberOfRooms: this.numberOfRooms\n        }, {\n          withCredentials: true\n        });\n        this.discount = response.data.discount;\n      } catch (error) {\n        console.error('Error fetching discount:', error);\n      }\n    }\n  },\n  mounted() {\n    this.fetchRecommendations();\n  }\n};","map":{"version":3,"names":["axios","data","isLoading","recommendations","currentPage","checkInDate","checkOutDate","numberOfRooms","discount","computed","currentHotel","methods","fetchRecommendations","response","get","withCredentials","error","console","goforRate","$router","push","path","prevPage","nextPage","length","fetchDiscount","post","mounted"],"sources":["src/components/RecommendResult.vue"],"sourcesContent":["<!-- 推荐很多个，切页。后面需要选择一个然后book -->\r\n<template>\r\n  <div class=\"container\">\r\n    <!-- Wait for loading：if isLoading is true，Display waiting anime -->\r\n    <div v-if=\"isLoading\" class=\"loading-screen\">\r\n      <div class=\"message\" style=\"font-size: 28px; font-family: 'Times New Roman', Times, serif;\">\r\n        Give us a moment,<br> we are finding a suitable recommendation for you...\r\n      </div>\r\n      <div class=\"hourglass\">\r\n        <div class=\"sand\"></div>\r\n      </div>\r\n    </div>\r\n\r\n    <div v-else class=\"recommendation-screen\">\r\n      <h2 style=\"font-size: 30px; font-family: 'Times New Roman', Times, serif;\">Your personalized recommendations are ready!</h2>\r\n      <p style=\"font-size: 24px; font-family: 'Times New Roman', Times, serif; \">We recommend that this hotel for you:</p>\r\n\r\n      <div v-if=\"currentHotel\">\r\n        <div class=\"hotel-info\">\r\n          <img :src=\"currentHotel.imgUrl\" alt=\"Hotel Image\" class=\"hotel-image\" />\r\n          <div class=\"hotel-details\">\r\n            <h3>{{ currentHotel.name }}, {{ currentHotel.location }}</h3>\r\n            <ul>\r\n              <li>WiFi: {{ currentHotel['WiFi'] === 1 ? 'Available' : 'Not Available' }}</li>\r\n              <li>Swimming Pool: {{ currentHotel['Swimming Pool'] === 1 ? 'Available' : 'Not Available' }}</li>\r\n              <li>Free Parking: {{ currentHotel['Free Parking'] === 1 ? 'Available' : 'Not Available' }}</li>\r\n              <li>Facilities for Disabled Guests: {{ currentHotel['Disabled Facilities'] === 1 ? 'Available' : 'Not Available' }}</li>\r\n            </ul>\r\n            <!-- <button @click=\"bookHotel(currentHotel)\">Proceed to Book</button> -->\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"pagination\">\r\n          <button @click=\"prevPage\" :disabled=\"currentPage === 0\">Previous</button>\r\n          <button @click=\"nextPage\" :disabled=\"currentPage === recommendations.length - 1\">Next</button>\r\n        </div>\r\n      </div>\r\n      \r\n      <div class=\"booking-section\">\r\n        <h3 style=\"font-size: 24px;\">If you've decided, book here!</h3>\r\n\r\n        <form @submit.prevent=\"fetchDiscount\">\r\n          <label>\r\n            Check-in Date:\r\n            <input type=\"date\" v-model=\"checkInDate\" required />\r\n          </label>\r\n          <label>\r\n            Check-out Date:\r\n            <input type=\"date\" v-model=\"checkOutDate\" required />\r\n          </label>\r\n          <label>\r\n            Number of rooms:\r\n            <input type=\"number\" v-model=\"numberOfRooms\" min=\"1\" required />\r\n          </label>\r\n          \r\n          <button type=\"submit\">Calculate Discount</button>\r\n        </form>\r\n\r\n        <!-- Display discount -->\r\n        <div v-if=\"discount !== null\" class=\"discount-info\">\r\n          <p>Discount for your stay: {{ discount }}%</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <div class=\"bottom-button\">\r\n      <button @click=\"goforRate\" :disabled=\"currentPage === recommendations.length - 1\">Rate for our recommend system!</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      isLoading: true, // Control loading \r\n      recommendations: [], // Save the recommend results\r\n      currentPage: 0, // The page number\r\n\r\n      // Data about computing discount\r\n      checkInDate: '',\r\n      checkOutDate: '',\r\n      numberOfRooms: 1,\r\n      discount: null, \r\n    };\r\n  },\r\n  computed: {\r\n    currentHotel() {\r\n      return this.recommendations[this.currentPage];\r\n    }\r\n  },\r\n  methods: {\r\n    async fetchRecommendations() {\r\n      try {\r\n        const response = await axios.get('http://localhost:5000/getrecommendations', { withCredentials: true });  // Flask API 的 URL\r\n        this.recommendations = response.data;\r\n        this.isLoading = false; // Hide loading\r\n      } catch (error) {\r\n        console.error('Error fetching recommendations:', error);\r\n      }\r\n    },\r\n    // Go for system rate\r\n    goforRate() {\r\n      this.$router.push({ path: '/system-rate'});\r\n    },\r\n    prevPage() {\r\n      if (this.currentPage > 0) {\r\n        this.currentPage--;\r\n      }\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.recommendations.length - 1) {\r\n        this.currentPage++;\r\n      }\r\n    },\r\n  \r\n    async fetchDiscount() {\r\n      try {\r\n        const response = await axios.post('http://localhost:5000/getdiscount', {\r\n          checkInDate: this.checkInDate,\r\n          checkOutDate: this.checkOutDate,\r\n          numberOfRooms: this.numberOfRooms\r\n        }, { withCredentials: true });\r\n        this.discount = response.data.discount; \r\n      } catch (error) {\r\n        console.error('Error fetching discount:', error);\r\n      }\r\n    },\r\n    \r\n  },\r\n  mounted() {\r\n    \r\n    this.fetchRecommendations();\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n.container {\r\n  border: 1px solid #000;\r\n  display: flex;\r\n  padding: 20px;\r\n  border-radius: 5px;\r\n  width: 800px;\r\n  height: auto;\r\n  margin: 120px auto;\r\n  padding: 20px;\r\n  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);\r\n  justify-content: center;\r\n  align-items: center;\r\n  flex-direction: column;\r\n}\r\n\r\n.loading-screen {\r\n  text-align: center;\r\n}\r\n\r\n.recommendation-screen {\r\n  text-align: center;\r\n  padding-top: 20px;\r\n}\r\n\r\n.hotel-info {\r\n  display: flex;\r\n  justify-content: space-around;\r\n  align-items: center;\r\n  margin-top: 20px;\r\n  gap: 20px; \r\n}\r\n\r\n\r\n.hotel-image {\r\n  width: 300px !important;\r\n  height: 200px !important;\r\n  object-fit: cover !important;\r\n  border-radius: 8px;\r\n  min-width: 300px;\r\n  min-height: 200px;\r\n  max-width: 300px;\r\n  max-height: 200px;\r\n}\r\n\r\n\r\n\r\n.hotel-details {\r\n  text-align: left;\r\n}\r\n\r\n.hotel-details ul {\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.hotel-details li {\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.pagination {\r\n  margin-top: 20px;\r\n}\r\n\r\n.pagination button {\r\n  margin: 0 10px;\r\n}\r\n\r\n.hourglass {\r\n  width: 40px;\r\n  height: 60px;\r\n  border: 4px solid black;\r\n  border-radius: 50%;\r\n  position: relative;\r\n  margin: 20px auto;\r\n  animation: rotate 2s infinite linear;\r\n}\r\n\r\n.sand {\r\n  width: 10px;\r\n  height: 10px;\r\n  background: black;\r\n  border-radius: 50%;\r\n  position: absolute;\r\n  top: 20px;\r\n  left: 50%;\r\n  transform: translateX(-50%);\r\n  animation: falling 1.5s infinite ease-in-out;\r\n}\r\n\r\n/* Rotate */\r\n@keyframes rotate {\r\n  0% {\r\n    transform: rotate(0deg);\r\n  }\r\n  100% {\r\n    transform: rotate(360deg);\r\n  }\r\n}\r\n\r\n\r\n@keyframes falling {\r\n  0% {\r\n    top: 20px;\r\n  }\r\n  50% {\r\n    top: 50px;\r\n  }\r\n  100% {\r\n    top: 20px;\r\n  }\r\n}\r\n\r\nbutton {\r\n  margin-top: 20px;\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n  border: 1px solid black;\r\n  background-color: white;\r\n}\r\n\r\n/* 预订部分样式 */\r\n.booking-section {\r\n  margin-top: 40px;\r\n  padding: 20px;\r\n  border: none; /* 移除边框 */\r\n  border-radius: 8px;\r\n  width: 100%;\r\n}\r\n\r\n\r\n.booking-section label {\r\n  display: block;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.booking-section input {\r\n  padding: 8px;\r\n  margin-right: 10px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n}\r\n\r\n.discount-info {\r\n  margin-top: 20px;\r\n  font-size: 20px;\r\n  color: green;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #0056b3;\r\n}\r\n\r\n</style>"],"mappings":";AAuEA,OAAAA,KAAA;AAEA;EACAC,KAAA;IACA;MACAC,SAAA;MAAA;MACAC,eAAA;MAAA;MACAC,WAAA;MAAA;;MAEA;MACAC,WAAA;MACAC,YAAA;MACAC,aAAA;MACAC,QAAA;IACA;EACA;EACAC,QAAA;IACAC,aAAA;MACA,YAAAP,eAAA,MAAAC,WAAA;IACA;EACA;EACAO,OAAA;IACA,MAAAC,qBAAA;MACA;QACA,MAAAC,QAAA,SAAAb,KAAA,CAAAc,GAAA;UAAAC,eAAA;QAAA;QACA,KAAAZ,eAAA,GAAAU,QAAA,CAAAZ,IAAA;QACA,KAAAC,SAAA;MACA,SAAAc,KAAA;QACAC,OAAA,CAAAD,KAAA,oCAAAA,KAAA;MACA;IACA;IACA;IACAE,UAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;QAAAC,IAAA;MAAA;IACA;IACAC,SAAA;MACA,SAAAlB,WAAA;QACA,KAAAA,WAAA;MACA;IACA;IACAmB,SAAA;MACA,SAAAnB,WAAA,QAAAD,eAAA,CAAAqB,MAAA;QACA,KAAApB,WAAA;MACA;IACA;IAEA,MAAAqB,cAAA;MACA;QACA,MAAAZ,QAAA,SAAAb,KAAA,CAAA0B,IAAA;UACArB,WAAA,OAAAA,WAAA;UACAC,YAAA,OAAAA,YAAA;UACAC,aAAA,OAAAA;QACA;UAAAQ,eAAA;QAAA;QACA,KAAAP,QAAA,GAAAK,QAAA,CAAAZ,IAAA,CAAAO,QAAA;MACA,SAAAQ,KAAA;QACAC,OAAA,CAAAD,KAAA,6BAAAA,KAAA;MACA;IACA;EAEA;EACAW,QAAA;IAEA,KAAAf,oBAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}